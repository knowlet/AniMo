<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEDFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/search_row_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:src="@android:drawable/alert_dark_frame" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.34"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/search_row_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:text="TextView"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/search_row_sex"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.26"
                    android:text="S"
                    android:textColor="#666666"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/search_row_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:text="TextView"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/search_row_age"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.26"
                    android:text="S"
                    android:textColor="#666666"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="1"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/search_row_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:text="TextView"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
